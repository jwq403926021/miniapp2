.regionPicker-container{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background: #fff;

  transform: translate3d(0, 100%, 0);
  transform-origin: center;
  transition: all 0.2s ease-in-out;
  visibility: hidden;
}

.regionPicker-container.show{
  transform: translate3d(0, 0, 0);
  visibility: visible;
}

.regionPicker-mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 999;
  transition: all 0.2s ease-in-out;
  opacity: 0;
  visibility: hidden;
}
.regionPicker-mask.show{
  opacity: 1;
  visibility: visible;
}